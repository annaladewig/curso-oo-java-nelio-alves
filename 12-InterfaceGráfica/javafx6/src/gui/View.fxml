<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ViewController">
   <children>
      <Label layoutX="46.0" layoutY="46.0" text="Calculate Sum">
         <font>
            <Font name="Berlin Sans FB" size="20.0" />
         </font>
      </Label>
      <TextField fx:id="txtNumber1" layoutX="46.0" layoutY="90.0" promptText="First Number" />
      <TextField fx:id="txtNumber2" layoutX="46.0" layoutY="150.0" promptText="Second Number" />
      <Button fx:id="btSum" layoutX="46.0" layoutY="209.0" mnemonicParsing="false" onAction="#onBtSumAction" text="Sum" />
      <Label layoutX="86.0" layoutY="250.0" text="Result =">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
      <Label fx:id="labelResult" layoutX="143.0" layoutY="250.0" textFill="#0f07a0">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
